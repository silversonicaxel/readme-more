{
  "name": "readme-more",
  "version": "0.0.1",
  "description": "readme-more is a tool that serch for all *.MD files in your project and summarize them in the README.md",
  "license": "MIT",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "build": "tsc -p tsconfig.build.json",
    "test": "_mocha --opts ./mocha.opts",
    "test-watch": "_mocha --watch-extensions spec.ts --watch --opts ./mocha.opts",
    "test-coverage": "nyc _mocha --opts ./mocha.opts",
    "coveralls": "nyc npm run test && nyc report --reporter=text-lcov | coveralls"
  },
  "author": {
    "name": "Alessandro (silversonicaxel) Rabitti",
    "url": "https://github.com/silversonicaxel"
  },
  "main": "dist/index.js",
  "bin": {
    "readme-more": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silversonicaxel/readme-more"
  },
  "homepage": "https://github.com/silversonicaxel/readme-more#readme",
  "bugs": {
    "url": "https://github.com/silversonicaxel/readme-more/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">= 6.0.0"
  },
  "keywords": [
    "readme",
    "documentation",
    "readme more",
    "summary",
    "index"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.5",
    "@types/sinon": "^7.0.10",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "sinon": "^7.3.0",
    "source-map-support": "^0.5.11",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "commander": "^2.19.0"
  },
  "nyc": {
    "include": [
      "src/class/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "report-dir": "coverage/",
    "all": true,
    "check-coverage": true,
    "sourceMap": true,
    "cache": false,
    "instrument": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95
  }
}
