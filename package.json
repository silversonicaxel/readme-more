{
  "name": "summary-more",
  "version": "3.0.2",
  "description": "summary-more is a tool that search for all *.md files in your project and list them in the README.md file.",
  "license": "MIT",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "build": "tsc -p tsconfig.build.json",
    "pre-test": "mkdir -p fixtures/empty/",
    "test": "npm run pre-test && _mocha --opts ./mocha.opts",
    "test-watch": "npm run pre-test && _mocha --watch-extensions ts -w --opts ./mocha.opts",
    "test-coverage": "npm run pre-test && nyc _mocha --opts ./mocha.opts",
    "coveralls": "nyc npm run test && nyc report --reporter=text-lcov | coveralls"
  },
  "author": {
    "name": "Alessandro (silversonicaxel) Rabitti",
    "url": "https://github.com/silversonicaxel"
  },
  "main": "dist/index.js",
  "bin": {
    "summary-more": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silversonicaxel/summary-more"
  },
  "homepage": "https://github.com/silversonicaxel/summary-more#readme",
  "bugs": {
    "url": "https://github.com/silversonicaxel/summary-more/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">= 6.0.0"
  },
  "keywords": [
    "readme",
    "documentation",
    "readme more",
    "summary",
    "index"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.4",
    "@types/sinon": "^7.0.11",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^6.1.3",
    "nyc": "^13.3.0",
    "sinon": "^7.3.1",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.1.0",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "commander": "^2.20.0"
  },
  "nyc": {
    "include": [
      "src/class/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "report-dir": "coverage/",
    "all": true,
    "check-coverage": true,
    "sourceMap": true,
    "cache": false,
    "instrument": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95
  }
}
